<tr>
  <th scope="row"><%= room.id %></th>
  <td><%= room.name %></td>
  <td><%= room.category_name %></td>
  <td><%= room.price %></td>
  <td><%= image_tag room.image, class: "image-show-admin" %></td>
  <td>
    <%= link_to edit_admins_room_path(room), class: "btn btn-success" do %>
      <i class="fas fa-pen-square" aria-hidden="true"></i>
    <% end %>
    <%= link_to admins_room_path(room), method: :delete, data: {confirm: t("admins.you_sure")}, class: "btn btn-danger", id: "btn-del-#{room.id}", remote: true do %>
      <i class="fas fa-trash" aria-hidden="true"></i>
    <% end %>
  </td>
</tr>
