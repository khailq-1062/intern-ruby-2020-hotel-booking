<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <!-- Brand Logo -->
  <%= link_to admins_root_path, class: "brand-link" do %>
    <%= image_tag Settings.admin.logo_img, class: "brand-image img-circle elevation-3" %>
    <span class="brand-text font-weight-light"><%= t "admins.title" %></span>
  <% end %>
  <!-- Sidebar -->
  <div class="sidebar">
    <!-- Sidebar user panel (optional) -->
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%= image_tag Settings.admin.user_img, class: "img-circle elevation-2" %>
      </div>
      <div class="info">
        <%= link_to current_user.email, "#" %>
      </div>
    </div>
    <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item menu-open">
            <%= link_to admins_root_path, class: "nav-link active" do %>
            <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                <%= t "admins.dashboard" %>
                <i class="right fas fa-angle-left"></i>
              </p>
            <% end %>
          </li>
           <li class="nav-item menu-open">
            <%= link_to admins_rooms_path, class: "nav-link" do %>
              <i class="nav-icon fas fa-tachometer-alt"></i>
              <p>
                <%= t "admins.rooms.base_title" %>
                <i class="right fas fa-angle-left"></i>
              </p>
            <% end %>
          </li>
        </ul>
      </nav>
  </div>
  <!-- /.sidebar -->
</aside>
