          <div class="thm-container">
            <div class="box valign-middle">
              <div class="content text-left pull-left">
								<h2 data-animation="animated fadeInUp" class="this-title">
									<%= t ".the_best_place_for_relax" %>
								</h2>
								<p data-animation="animated fadeInDown"><%= t ".lorems" %></p>
