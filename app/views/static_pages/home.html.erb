<% provide :title, t("home") %>
<div id="minimal-bootstrap-carousel" data-ride="carousel" class="carousel default-home-slider slide carousel-fade shop-slider">
  <div role="listbox" class="carousel-inner">
      <div style="background-image: url(slider/10.jpg);backgroudn-position: center right;" class="item active slide-1">
